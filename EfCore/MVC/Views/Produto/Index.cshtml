@model IEnumerable<Dominio.Entidades.Produto>
@{
    ViewData["Title"] = "Listar produtos";
}
<h2>Produtos cadastrados</h2>
<a href="/Produto/Salvar" class="btn">Adicionar produto</a>
<div class="row">
    <div class="col-md-12">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Categoria</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>@item.Nome</td>
                        <td>@item.Categoria.Nome</td>
                        <td>
                            <a href="/Produto/Editar/@item.Id" class="btn">Editar</a>
                        </td>
                        <td>
                            <a href="/Produto/Deletar/@item.Id" class="btn">Deletar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>