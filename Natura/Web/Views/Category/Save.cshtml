@model NaturaDomain.Model.Category
@{
    ViewData["Title"] = "Gerenciar categoria";
}
<h2> Gerenciar produto </h2>
<form class="form-horizontal" asp-action="Save" asp-controller="Category" method="POST">
    <input type="hidden" class="form-control" asp-for="id">
    <div class="form-group">
        <label class="col-md-1 control-label" for="Name">Name</label>
        <div class="col-md-2">
            <input type="text" class="form-control" asp-for="name">
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2">
            <button class="btn btn-success">Salvar</button>
        </div>
    </div>
</form>