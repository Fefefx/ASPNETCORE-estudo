@model NaturaDomain.Model.Product
@{
    ViewData["Title"] = "Gerenciar produto";
}
<h2> Gerenciar produto </h2>
<form class="form-horizontal" asp-action="Save" asp-controller="Product" enctype="multipart/form-data" method="POST">
    <input type="hidden" class="form-control" asp-for="id">
    <div class="form-group">
        <label class="col-md-1 control-label" for="Name">Name</label>
        <div class="col-md-2">
            <input type="text" class="form-control" asp-for="name">
        </div>
        <div class="form-group">
            <label class="col-md-1 control-label" for="Name">Categoria</label>
            <div class="col-md-2">
                <select class="form-control" asp-for="Categoryid" asp-items='@(new SelectList(@ViewBag.categories, "id", "name"))'></select>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-1 control-label" for="Name">Quantidade</label>
            <div class="col-md-2">
                <input type="text" class="form-control" asp-for="amount">
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-1 control-label" for="Name">Tamanho</label>
            <div class="col-md-2">
                <input type="text" class="form-control" asp-for="size">
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-1 control-label" for="Name">Unidade</label>
            <div class="col-md-2">
                <select class="form-control" asp-for="unity">
                    <option value="g">g</option>
                    <option value="ml">ml</option>
                    <option value="unit">unit</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-1 control-label" for="Name">Selecione uma imagem</label>
            <div class="col-md-2">
                <input type="file" class="form-control" name="ImageFile">
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                <button class="btn btn-success">Salvar</button>
            </div>
        </div>
    </div>
</form>
